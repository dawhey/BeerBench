<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="300dp"
            android:id="@+id/logo_view"
            android:src="@drawable/nolabellarge"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Name:"
            android:id="@+id/textView"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/logo_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:text="Large Text"
            android:id="@+id/name_view"
            android:textColor="@color/itemHeader"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Brewed by:"
            android:id="@+id/textView4"
            android:layout_below="@+id/name_view"
            android:layout_alignLeft="@+id/name_view"
            android:layout_alignStart="@+id/name_view"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/brewed_view"
            android:textStyle="italic"
            android:textColor="@color/textDefault"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_alignRight="@+id/name_view"
            android:layout_alignEnd="@+id/name_view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Style:"
            android:id="@+id/textView6"
            android:layout_below="@+id/brewed_view"
            android:layout_alignLeft="@+id/brewed_view"
            android:layout_alignStart="@+id/brewed_view"
            android:layout_marginTop="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/style_view"
            android:textColor="@color/textDefault"
            android:layout_below="@+id/textView6"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_alignRight="@+id/brewed_view"
            android:layout_alignEnd="@+id/brewed_view"
            android:text="Medium Text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Alcohol by volume:"
            android:id="@+id/textView8"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/style_view"
            android:layout_alignLeft="@+id/style_view"
            android:layout_alignStart="@+id/style_view" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/alc_view"
            android:textColor="@color/textDefault"
            android:layout_below="@+id/textView8"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="IBU:"
            android:id="@+id/textView10"
            android:layout_alignBottom="@+id/textView8"
            android:layout_toRightOf="@+id/alc_view"
            android:layout_toEndOf="@+id/alc_view"
            android:layout_marginLeft="58dp"
            android:layout_marginStart="58dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/ibu_view"
            android:textColor="@color/textDefault"
            android:layout_alignBaseline="@+id/alc_view"
            android:layout_alignBottom="@+id/alc_view"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Description:"
            android:id="@+id/textView12"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/alc_view"
            android:layout_alignLeft="@+id/alc_view"
            android:layout_alignStart="@+id/alc_view" />

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/desc_view"
            android:layout_below="@+id/textView12"
            android:textColor="@color/textDefault"
            android:layout_alignLeft="@+id/textView12"
            android:layout_alignStart="@+id/textView12"
            android:layout_alignRight="@+id/style_view"
            android:layout_alignEnd="@+id/style_view"
            android:layout_marginBottom="20dp"/>

    </RelativeLayout>

</ScrollView>